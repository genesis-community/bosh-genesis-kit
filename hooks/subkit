#!/bin/bash

for kit in $@; do
  if [[ $kit == "bosh-init" ]]; then
    BOSH_INIT_ENABLED=1
  fi
  case $kit in
  azure-cpi)
    CPI=$kit
    CPI_INIT=azure-init
  ;;
  aws-cpi)
    CPI=$kit
    CPI_INIT=aws-init
  ;;
  google-cpi)
    CPI=$kit
    CPI_INIT=google-init
  ;;
  openstack-cpi)
    CPI=$kit
    CPI_INIT=openstack-init
  ;;
  vsphere-cpi)
    CPI=$kit
  ;;
  vcloud-cpi)
    CPI=$kit
  ;;
  warden-cpi)
    CPI=$kit
  ;;
  esac
done

if [[ $BOSH_INIT_ENABLED == 1 && $CPI == "warden-cpi" ]]; then
	echo "Sorry, but this kit doesn't know how to deploy to the warden-cpi using bosh-int / bosh create-env" >&2
	exit 1
fi

for kit in $@; do
  echo $kit
  if [[ $BOSH_INIT_ENABLED == 1 && $kit == $CPI ]]; then
    if [[ -z $CPI_INIT ]]; then
      echo "bosh-init + $CPI is currently unimplemented" >&2
      exit 1
    fi
    echo $CPI_INIT
  fi
done
